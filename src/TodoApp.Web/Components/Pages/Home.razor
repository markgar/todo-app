@page "/"
@using TodoApp.Shared
@rendermode InteractiveServer
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Todo List</PageTitle>

<h1>Todo List</h1>

<div class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Enter a new todo..." @bind="newTitle" @bind:event="oninput" @onkeydown="HandleKeyDown" />
        <button class="btn btn-primary" @onclick="AddTodo" disabled="@string.IsNullOrWhiteSpace(newTitle)">Add</button>
    </div>
</div>

@if (todos == null)
{
    <p>Loading...</p>
}
else if (!todos.Any())
{
    <p>No todos yet. Add one above!</p>
}
else
{
    <ul class="list-group">
        @foreach (var todo in todos)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <input type="checkbox" checked="@todo.IsComplete" @onchange="() => ToggleComplete(todo)" class="me-2" />
                    <span style="@(todo.IsComplete ? "text-decoration: line-through;" : "")">@todo.Title</span>
                </div>
                <button class="btn btn-danger btn-sm" @onclick="() => DeleteTodo(todo.Id)">Delete</button>
            </li>
        }
    </ul>
}

@code {
    private List<TodoItem>? todos;
    private string newTitle = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadTodos();
    }

    private async Task LoadTodos()
    {
        var client = HttpClientFactory.CreateClient("TodoApi");
        todos = await client.GetFromJsonAsync<List<TodoItem>>("/api/todos");
    }

    private async Task AddTodo()
    {
        if (string.IsNullOrWhiteSpace(newTitle)) return;
        var client = HttpClientFactory.CreateClient("TodoApi");
        await client.PostAsJsonAsync("/api/todos", new TodoItem { Title = newTitle });
        newTitle = "";
        await LoadTodos();
    }

    private async Task ToggleComplete(TodoItem todo)
    {
        var client = HttpClientFactory.CreateClient("TodoApi");
        todo.IsComplete = !todo.IsComplete;
        await client.PutAsJsonAsync($"/api/todos/{todo.Id}", todo);
        await LoadTodos();
    }

    private async Task DeleteTodo(int id)
    {
        var client = HttpClientFactory.CreateClient("TodoApi");
        await client.DeleteAsync($"/api/todos/{id}");
        await LoadTodos();
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await AddTodo();
    }
}
